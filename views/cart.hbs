{{> header }}






<div class="container">

    <br>
    <br>
    <br>


    {{#each items}}


        <div class="row">
            <div class="col s12 m12">
                <!--        <h2 class="header">Horizontal Card</h2>-->
                <div class="card horizontal">
                    <div class="card-image">
                        <img src="/images/uploads/thumbs/{{this.image}}">
                    </div>
                    <div class="card-stacked">
                        <div class="card-content">
                            <span class="card-title"><strong>{{this.name}}</strong></span>

                            <hr>
                            <p>{{this.description}}</p>
                        </div>
                        <div class="card-action">
                            <a href="cart/delete/{{this.id}}" class="waves-effect waves-light btn"><i class="material-icons left">delete</i>REMOVE</a>






                            <!--                    <a href="#">This is a link</a>-->
                        </div>
                    </div>
                </div>
            </div>
        </div>





    {{/each}}






</div>

<div class="row order">

    <div class="col s8 ">
        <h3>PLACE ORDER</h3>
    </div>
    <div class="col s4">
        <a href="cart/order" class="waves-effect waves-light btn-large orderbut"><i class="material-icons left"></i>Place Order</a>
    </div>
</div>
<div class="end"></div>




{{> footer-end }}