{{> header }}









<div class="container" style="margin-top: 2em">
    <div class="row">

        {{#each data.search_res}}

            <div class="col s12 m6">
                <div class="card">
                    <div class="card-image">
                        <img class="activator" src="/images/uploads/thumbs/{{this.image}}">
                        <span class="card-title activator teal" style="width: 100%"">{{this.name}}</span>
                        <a href="add/{{this.id}}" class="btn-floating halfway-fab waves-effect waves-light red" ><i class="material-icons">add_shopping_cart</i></a>
                    </div>
                    <div class="card-content activator">
                        <h3>RS. {{this.price}}</h3><p class="right grey-text"> CATEGORY:  {{this.category}}</p>
                        <ul>
                            {{#each this.highlight}}
                                <li class="a">{{this}}</li>
                            {{/each}}
                        </ul>

                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
                        <p>{{this.description}}</p>
                    </div>
                </div>
            </div>



            {{#if (isDivisor 2 (sum @index 1))}}
            </div>
            <div class="row">

            {{/if}}
        {{/each}}

    </div>
</div>
{{> footer-end }}

